{
  "name": "planner-desktopapp",
  "private": true,
  "version": "0.1.0",
  "main": "out/main/index.mjs",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist:win": "npm run build && electron-builder --win nsis"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "dotenv": "^16.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.6"
  },
  "build": {
    "appId": "com.petar.plannerdesktopapp",
    "productName": "Planner Desktop App",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "ai",
        "to": "ai",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "out/main/index.mjs"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
